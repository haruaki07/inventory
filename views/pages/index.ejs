<%- include("../partials/head"); -%>

<div class="max-w-xl mx-auto h-full">
  <h2 class="pb-6 pt-8 text-xl font-bold text-gray-900 dark:text-white">
    Product list
  </h2>

  <a
    href="/create"
    type="button"
    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 float-right"
  >
    New product
  </a>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg clear-right">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead
        class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
      >
        <tr>
          <th scope="col" class="px-6 py-3">Product name</th>
          <th scope="col" class="px-6 py-3">Price</th>
          <th scope="col" class="px-6 py-3">
            <span class="sr-only">Delete</span>
          </th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(function(product) { %>
        <tr
          class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
        >
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            <%= product.name %>
          </th>
          <td class="px-6 py-4"><%= formatRupiah(product.price) %></td>
          <td class="px-6 py-4 text-right">
            <a
              href="/delete/<%= product.id %>"
              class="font-medium text-blue-600 dark:text-blue-500 hover:underline"
              onclick="
                event.preventDefault();
                window.location.replace('/delete/<%= product.id %>');"
            >
              Delete
            </a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include("../partials/foot"); -%>
